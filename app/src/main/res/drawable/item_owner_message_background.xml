    <item android:minLevel="0" android:maxLevel="0">
        <shape android:shape="rectangle">
            <solid android:color="@color/blue_light"/>
            <corners android:topLeftRadius="15dp" android:bottomLeftRadius="15dp" android:bottomRightRadius="15dp" />
        </shape>
    </item>

    <item android:minLevel="1" android:maxLevel="1">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimary"/>
            <corners android:topLeftRadius="15dp" android:bottomLeftRadius="15dp" android:bottomRightRadius="15dp" />
        </shape>
    </item>
</level-list>